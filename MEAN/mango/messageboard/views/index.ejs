<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Message Board</h1>
    <form class="" action="/newm" method="post">
      <p>Name:<input type="text" name="name" value=""></p>
      <p>Message:<textarea name="message" rows="8" cols="80"></textarea></p>
      <input type="submit" name="submit" value="submit">
    </form>


    <% for(var x=0; x< messages.length; x++) { %>
				<div>
					<h3>Name: <%= messages[x].name %></h3>
					<h3>Message: <%= messages[x].message %></h3>
          <% for(var y=0; y<messages[x]._comments.length; y++){ %>
				<p>Name: <%= messages[x]._comments[y].name %></p>
				<p>Comment: <%= messages[x]._comments[y].text %></p>
			<% } %>
          <form action=<%="/comment/" + messages[x]._id %> method="post">
						<p class="margin">Name: </p><input class="comment_input" type="text" name="name">
						<p class="margin">Comment: </p><textarea class="comment_text"name="comment"></textarea>
						<input class="post2" type="submit" value="Post comment">
					</form>




				</div>
			<% } %>

  </body>
</html>
